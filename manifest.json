{
    "name": "DizziGo - AI-Powered Terminal Companion",
    "short_name": "DizziGo",
    "description": "Your intelligent CLI assistant that acts like a senior software engineer with complete context of your local project.",
    "version": "1.0.0",
    "start_url": "/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#00ff88",
    "background_color": "#0a0e1a",
    "scope": "/",
    "lang": "en-US",
    "dir": "ltr",
    
    "categories": [
        "developer-tools",
        "productivity",
        "utilities",
        "business"
    ],
    
